<div class="message">
  <div class="message-up">
    <div class="message-name"><%= message.user.name %></div>
    <div class="message-time"><%= l message.created_at %></div>
  </div>
  <div class="message-low">
    <div class="message-content"><%= message.content %></div>
    <%= image_tag message.image.variant(resize: '500x500'), class: "message-image" if message.image.attached? %>
  </div>
</div>
