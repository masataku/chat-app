<div class="main-header">
  <div class="header-left">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="header-right">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="main-middle">
  <div class="messages">
    <div class="message">
      <div class="message-up">
        <div class="message-name">ユーザー1</div>
        <div class="message-time">2000/09/09</div>
      </div>
      <div class="message-low">
        <div class="message-content">テキストテキスト</div>
      </div>
    </div>
    <div class="message">
      <div class="message-up">
        <div class="message-name">ユーザー２</div>
        <div class="message-time">2000/09/09</div>
      </div>
      <div class="message-low">
        <div class="message-content">テキストテキスト２</div>
      </div>
    </div>
  </div>
</div>  
<%# <div class="main-bottom"> %>
<%= form_with model: [@room, @message], class="main-bottom" local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, placeholder: "type a message" %>
    <%# <input class="form-message" placeholder="type a message"> %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit "送信", class: "form-submit" %>
  <%# <input class="form-submit" type="submit" value="送信">   %>
<%# </div> %>
<% end %>